{
  "private": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter web",
    "dev:api": "turbo run dev --filter @monsoft/vernisai-api",
    "dev:proxy": "turbo run dev --filter @monsoft/vernisai-proxy",
    "dev:all": "turbo run dev --filter web --filter @monsoft/vernisai-api --filter @monsoft/vernisai-proxy",
    "start": "turbo run start",
    "start:web": "turbo run start --filter web",
    "start:api": "turbo run dev:server --filter @monsoft/vernisai-api",
    "start:proxy": "turbo run start --filter @monsoft/vernisai-proxy",
    "start:all": "turbo run start --filter web --filter @monsoft/vernisai-api --filter @monsoft/vernisai-proxy",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "validate": "npm run lint && npm run format:check && npm run build",
    "prepare": "husky",
    "test": "turbo run test",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.114.27",
    "@tanstack/router-plugin": "^1.114.27",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4"
  },
  "name": "@monsoft/vernisai-chat",
  "version": "0.0.1",
  "description": "Vernisai Chat - AI-powered chat and intelligent agents",
  "author": "Monsoft Solutions <https://monsoftsolutions.com>",
  "license": "MIT",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tanstack/react-router": "^1.114.27",
    "@types/http-proxy": "^1.17.16",
    "audit": "^0.0.6",
    "drizzle-orm": "^0.41.0",
    "http-proxy": "^1.18.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
